---
const navData =[
  {label : "Home", href: "/"},
  {label : "About", href: "/about"},
  {label : "Content", href: "/content"},
  {label : "Form", href: "/form"},
  ]
---

<nav class="bg-white border-b-8 border-blue-900" id="menu">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 justify-between">
        <div class="flex">
          <div class="flex flex-shrink-0 items-center">
            <img class="h-8 w-auto" src="/nuhslogo.webp" alt="Your Company">
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <!-- Current: "border-indigo-500 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
            {
              navData.map( navItem => <a href={navItem.href} class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-900">{navItem.label}</a>
              )
            }>
          </div>
        </div>

    </div>
  
    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden" id="mobile-menu">
      <div class="space-y-1 pb-3 pt-2">
        <!-- Current: "bg-indigo-50 border-indigo-500 text-indigo-700", Default: "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700" -->
        { navData.map(navItem => <a href={navItem.href} class="block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700">{navItem.label}</a>)}
      </div>
 
    </div>
  </nav>